footer.footer
  .container.clearfix 
    .b-footer-left
      a(href="index.html").b-footer__logo__link
        img(src="img/logo-footer.png", alt="#", title="Логотип").b-footer__logo-img.b-footer__logo-img_mod
        span.b-footer__logo-text.hidden-text COOTECH
    .b-footer-right.clearfix
      .b-footer-socials
        ul.b-footer-socials__list.clearfix
          li.b-footer-socials__item 
            a(href="https://www.facebook.com/" target="_blank").b-footer-socials__link.b-footer-socials__link_fb       
              span.b-footer-socials__text.hidden-text facebook
          li.b-footer-socials__item     
            a(href="https://vk.com/" target="_blank").b-footer-socials__link.b-footer-socials__link_b 
              span.b-footer-socials__text.hidden-text vkontakte
          li.b-footer-socials__item      
            a(href="https://twitter.com/" target="_blank").b-footer-socials__link.b-footer-socials__link_tw
              span.b-footer-socials__text.hidden-text twitter
      .b-footer-nav
        ul.b-footer-nav__menu.clearfix
          each menu in ['Планшеты', 'Мобильные телефоны', 'Мр3 плееры', 'Персональные компьютеры', 'Ноутбуки', 'Аксессуары', 'Бытовая техника']
            li.b-footer-nav__menu__item
              a(href="#").b-footer-nav__menu__link
                span.b-footer-nav__menu__text= menu       
  .b-footer-copyright 
    .b-footer-copyright__text All rights reserved. 2015. no copy alowed          
